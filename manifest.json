{
  "manifest_version": 3,

  "name": "Sleeper.com Matchup Extension",
  "version": "1.0",
  "description": "Sleeper Fantasy Extension",

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "archive/popup.html",
    "default_icon": {
      "16": "screenshots/SleeperIcon.png",
      "48": "screenshots/SleeperIcon.png",
      "128": "screenshots/SleeperIcon.png"
    }
  },
  
  "icons": {
    "16": "screenshots/SleeperIcon.png",
    "48": "screenshots/SleeperIcon.png",
    "128": "screenshots/SleeperIcon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://sleeper.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
